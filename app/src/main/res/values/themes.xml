<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Retrofitpractice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EC407A</item>
        <item name="colorPrimaryVariant">#C72A5F</item>
        <item name="colorOnPrimary">#FFEE58</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  material theme  -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- ... -->
        <item name="colorPrimary">#EC407A</item>
        <item name="colorPrimaryVariant">#C72A5F</item>
        <item name="colorOnPrimary">#FFEE58</item>
        <item name="colorControlHighlight">#EC407A</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">#C72A5F</item>
        <item name="colorControlHighlight">@color/lightPink</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/lightGray</item>
        <item name="colorControlActivated">#C72A5F</item>
    </style>
</resources>